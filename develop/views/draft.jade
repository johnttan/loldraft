          li.rankmenu
            a#rankclick(href='#rank') Ranking
            
          li
            a(href='#sched') Schedule
          li
            a(href='#stats') Statistics
          li
            a(href='#trade') Trading
        footer.contact
            a(href='#contact') Contact Us
        footer.terms
            a(href='#contact') Terms of Service
    #main
      .pure-g-r.is-center
        container.is-center#roster
          include roster
        container.is-center#draftteam
          include draftteam
        container.is-center#ranking
          container.fa.fa-spinner.fa-spin.fa-5x.rankspin
          container#rankingcontainer



